<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="#00000000"
    tools:context=".AddStaff">

    <TextView
        android:id="@+id/txt_title_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Thêm nhân viên"/>
    <EditText
        android:id="@+id/txt_id_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã nhân viên: "/>
    <EditText
        android:id="@+id/txt_name_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ tên nhân viên: "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh: "
            android:layout_marginLeft="4dp"
            android:textSize="18sp"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <EditText
        android:id="@+id/txt_room_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phòng ban: "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:background="@drawable/bgr_btn"
            android:text="Cancel"/>
        <Button
            android:id="@+id/btn_add"
            android:background="@drawable/bgr_btn"
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:textColor="#fff"
            android:layout_height="35dp"
            android:text="Add"/>
    </LinearLayout>
</LinearLayout>